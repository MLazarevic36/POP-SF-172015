<Window x:Class="POP_SF172015WPF.UI.Edit.TipNamestajaEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP_SF172015WPF.UI.Edit"
        mc:Ignorable="d"
        Title="TipNamestajaEditWindow" Height="300" Width="421.805">
    <Grid>
        <Button x:Name="btnPotvrdi" Content="Potvrdi" HorizontalAlignment="Left" Margin="90,222,0,0" VerticalAlignment="Top" Width="75" Click="btnPotvrdi_Click"/>
        <Button x:Name="btnOdustani" Content="Odustani" HorizontalAlignment="Left" Margin="236,222,0,0" VerticalAlignment="Top" Width="75" Click="btnOdustani_Click"/>
        <Label Content="ID:" HorizontalAlignment="Left" Margin="55,46,0,0" VerticalAlignment="Top"/>
        <Label Content="Naziv:" HorizontalAlignment="Left" Margin="55,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbId" HorizontalAlignment="Left" Height="23" Margin="207,46,0,0"  Text="{Binding Path=Id}" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="tbNaziv" HorizontalAlignment="Left" Height="23" Margin="207,100,0,0" Text="{Binding Path=Naziv}" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
