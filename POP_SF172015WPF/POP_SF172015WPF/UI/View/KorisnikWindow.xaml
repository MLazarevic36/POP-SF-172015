        <Button x:Name="btnIzmeni" Content="Izmeni" HorizontalAlignment="Left" Margin="103,1,0,0" VerticalAlignment="Top" Width="75" Click="btnIzmeni_Click" Grid.Row="1"/>
        <Button x:Name="btnObrisi" Content="Obrisi" HorizontalAlignment="Left" Margin="192,1,0,0" VerticalAlignment="Top" Width="75" Click="btnObrisi_Click" Grid.Row="1"/>

    </Grid>
</Window>
